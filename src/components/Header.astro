---
import { buttonVariants } from "@/components/ui/button";
import ThemeToggle from "@/components/ThemeToggle.astro";
import MobileNav from "@/components/MobileNav.astro"; // Updated import path
---

<header
  class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur"
>
  <div class="container flex flex-wrap items-center justify-between py-3 md:h-16 md:py-0"> {/* Allow wrapping */}
    {/* Left side: Brand and Desktop Nav */}
    <div class="flex items-center gap-6 md:gap-10">
      <a href="/" class="flex items-center space-x-2">
        <span class="font-heading inline-block font-bold">Coalbanks Creative</span>
      </a>
      {/* Desktop Navigation */}
      <nav class="hidden md:flex items-center space-x-1"> {/* Reduced spacing */}
        <a href="/about" class={buttonVariants({ variant: 'ghost', size: 'sm' })}>About</a> {/* Added About link */}
        <a href="/services" class={buttonVariants({ variant: 'ghost', size: 'sm' })}>Services</a> {/* Updated href */}
        <a href="/blog" class={buttonVariants({ variant: 'ghost', size: 'sm' })}>Blog</a>
        <a href="/contact" class={buttonVariants({ variant: 'ghost', size: 'sm' })}>Contact</a>
      </nav>
    </div>

    {/* Right side: Theme Toggle & Mobile Nav Toggle */}
    <div class="flex items-center justify-end gap-2"> {/* Added gap */}
      <ThemeToggle />
      <MobileNav /> {/* Removed client:load */}
    </div>

    {/* Removed the previous simple mobile nav */}
  </div>
</header>

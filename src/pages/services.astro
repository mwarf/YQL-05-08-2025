---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ServicesGrid from "@/components/blocks/ServicesGrid.tsx";
import { FlickeringGrid } from "@/components/ui/flickering-grid"; // Import the FlickeringGrid component
// Icons are now handled within the React component

// Pass icon names as strings
const ourServices = [
  {
    iconName: "Building2", // Pass name instead of component
    title: "Elevate Your Listings",
    description:
      "Sell or lease faster! We capture stunning aerial photos & immersive video tours that showcase your Lethbridge property's location, scale, and best features.",
  },
  {
    iconName: "Film",
    title: "Wow Factor Marketing & Brand Videos",
    description:
      "Make your Lethbridge brand unforgettable. We create eye-catching aerials for promotional videos, website banners, and brand stories that truly stand out.",
  },
  {
    iconName: "CalendarDays",
    title: "Dynamic Event Coverage",
    description:
      "Showcase the energy! Our drones capture the full scale and excitement of your Lethbridge festival, corporate gathering, or community event from unique aerial angles.",
  },
  {
    iconName: "HardHat",
    title: "Construction Progress From Above",
    description:
      "Keep your Lethbridge project on track safely. Get clear aerial progress reports, site overviews, and valuable documentation without the hassle.",
  },
  {
    iconName: "MapPinned",
    title: "Precision Mapping & Data",
    description:
      "Need accurate data? We provide detailed 2D maps, 3D models, and precise measurements for site surveys, inspections, agriculture, and planning near Lethbridge.",
  },
  {
    iconName: "Leaf",
    title: "Smarter Farming Aerials",
    description:
      "Farm smarter, not harder. Use drone insights for crop health monitoring (NDVI), irrigation checks, and optimized resource management on your Southern Alberta fields.",
  },
];
---

<BaseLayout title="Drone Services in Lethbridge | Lethbridge Drone" description="Lethbridge Drone offers expert aerial photography, videography, mapping & inspection services in Southern Alberta. Elevate your project today!">

  {/* Introductory Section */}
  <section class="py-16 md:py-24 text-center bg-background">
    <div class="container max-w-3xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
        Our Drone Services: Elevating Lethbridge Perspectives
      </h1>
      <p class="text-lg text-muted-foreground leading-relaxed">
        Ready to see Lethbridge from a whole new angle? At Coalbanks Creative, we're your local, certified experts in drone technology. We bring professional skill and a deep understanding of Southern Alberta to every project, delivering stunning aerial photos, videos, maps, and inspections that solve problems and showcase the best of your work.
      </p>
    </div>
  </section>

  {/* New Services Grid Section - Removed redundant title prop */}
  <section id="services-grid" class="bg-background">
    <div class="container">
       <ServicesGrid services={ourServices} client:load /> {/* Removed title prop as it's now in the intro section */}
    </div>
  </section>

  {/* Existing Why Choose Us Section (potentially restyled) */}
  <section id="why-choose-us" class="relative overflow-hidden py-16 md:py-24 bg-secondary">
    {/* Add FlickeringGrid as background */}
    <FlickeringGrid
      client:visible
      className="absolute inset-0 -z-10 size-full"
      squareSize={4}
      gridGap={6}
      color="#6B7280"
      maxOpacity={0.2}
      flickerChance={0.05}
    />
    <div class="container relative z-10"> {/* Added relative z-10 */}
       <div class="max-w-3xl mx-auto text-center md:text-left"> {/* Centered text for potentially better layout */}
        <h2 class="font-heading text-3xl font-bold mb-6">Why Choose Coalbanks Creative for Your Drone Needs?</h2>
        <p class="text-muted-foreground leading-relaxed mb-6">
          It's simple: we deliver stunning aerial results, even when the project gets complex. Got a challenging shoot near Lethbridge? Bring it on! We're fully Transport Canada Advanced Certified and insured, meaning you can trust your project is captured safely, legally, and looks absolutely fantastic.
        </p>
        <p class="text-muted-foreground leading-relaxed">
          We're pros at collaborating and navigating the logistics smoothly (yep, even around the airport!). Ultimately, we take potential headaches off your plate and turn them into the incredible visual assets your project deserves.
        </p>
       </div>
    </div>
  </section>

  {/* Optional Call to Action */}
  <section class="container py-16 md:py-24 text-center">
    <h2 class="font-heading text-3xl font-bold mb-6">Ready to Elevate Your Project?</h2>
    <p class="text-muted-foreground mb-8 max-w-xl mx-auto">Contact us today to discuss your aerial videography, photography, mapping, or inspection needs.</p>
    {/* Using standard anchor tag with Tailwind classes matching buttonVariants */}
    <a href="/contact" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-8">Get a Quote</a>
  </section>

</BaseLayout>

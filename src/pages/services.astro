---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ServicesGrid from "@/components/blocks/ServicesGrid.tsx";
// Icons are now handled within the React component

// Pass icon names as strings
const ourServices = [
  {
    iconName: "Building2", // Pass name instead of component
    title: "Real Estate That Wows",
    description:
      "Help sell or lease faster! Get stunning aerial photos & video tours that show off a property's true scale, location, and best bits here in Lethbridge.",
  },
  {
    iconName: "Film",
    title: "Marketing Videos with Altitude",
    description:
      "Make your Lethbridge brand pop! We create eye-catching drone shots for promos, websites, and brand stories that people actually remember.",
  },
  {
    iconName: "CalendarDays",
    title: "Event Coverage From the Sky",
    description:
      "Capture the whole vibe! Our drones get those epic shots showing the scale and energy of your Lethbridge festival, wedding, or corporate shindig.",
  },
  {
    iconName: "HardHat",
    title: "Construction Site Fly-Overs",
    description:
      "Keep tabs on your Lethbridge build, safely and easily. Get clear progress shots, site overviews, and useful documentation without anyone climbing scaffolding.",
  },
  {
    iconName: "MapPinned",
    title: "Mapping & Surveys (Super Accurate!)",
    description:
      "Need the lay of the land? We create detailed maps, 3D models, and precise measurements for surveys, inspections, farming, and planning around Lethbridge.",
  },
  {
    iconName: "Leaf",
    title: "Ag Insights for Smart Farming",
    description:
      "Farm smarter! Use drone data for checking crop health (NDVI), spotting irrigation issues, and managing resources better on your Southern Alberta fields.",
  },
];
---

<BaseLayout title="Drone Services in Lethbridge | Lethbridge Drone" description="Lethbridge Drone offers expert aerial photography, videography, mapping & inspection services in Southern Alberta. Elevate your project today!">

  {/* Introductory Section */}
  <section class="py-16 md:py-24 text-center bg-background">
    <div class="container max-w-3xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4 tracking-tight"> {/* Added tracking-tight */}
        What We Do: Awesome Drone Services for Lethbridge!
      </h1>
      <p class="text-lg text-muted-foreground leading-relaxed">
        Ready to see things differently? We're Coalbanks Creative, your friendly neighbourhood drone pros right here in Lethbridge. We know our stuff (we're certified!) and we know Southern Alberta. We use cool drone tech to get amazing aerial photos, videos, maps, and inspection data that helps solve problems and makes your work look fantastic.
      </p>
    </div>
  </section>

  {/* New Services Grid Section - Removed redundant title prop */}
  <section id="services-grid" class="bg-background">
    <div class="container">
       <ServicesGrid services={ourServices} client:load /> {/* Removed title prop as it's now in the intro section */}
    </div>
  </section>

  {/* Existing Why Choose Us Section (potentially restyled) */}
  <section id="why-choose-us" class="relative overflow-hidden py-16 md:py-24 bg-secondary/90 dark:bg-secondary/80 rounded-lg"> {/* Adjusted bg opacity, added rounded-lg */}
    {/* Add topography SVG background */}
    <div class="absolute inset-0 -z-10 size-full bg-[url('/images/assets/topography.svg')] bg-repeat opacity-30 dark:invert" />
    <div class="container relative z-10"> {/* Added relative z-10 */}
       <div class="max-w-3xl mx-auto text-center"> {/* Centered text */}
        <h2 class="font-heading text-3xl font-bold mb-6 tracking-tight">Why Pick Us for Your Drone Stuff?</h2> {/* Added tracking-tight */}
        <p class="text-muted-foreground leading-relaxed mb-6">
          Good question! We think it boils down to this: we get awesome shots, even when things get tricky. Got a tough location near Lethbridge? We love a challenge! Plus, we're fully certified by Transport Canada and insured, so you know everything's safe, legal, and going to look great.
        </p>
        <p class="text-muted-foreground leading-relaxed">
          We're easy to work with, handle the tricky logistics (like flying near the airport), and basically take the stress out of getting amazing drone content for your project. We turn potential headaches into awesome visuals!
        </p>
       </div>
    </div>
  </section>

  {/* Optional Call to Action */}
  <section class="container py-16 md:py-24 text-center">
    <h2 class="font-heading text-3xl font-bold mb-6 tracking-tight">Ready to See Your Project Soar?</h2> {/* Added tracking-tight */}
    <p class="text-muted-foreground mb-8 max-w-xl mx-auto">Let's chat about your ideas! Whether it's photos, video, maps, or inspections, we're here to help.</p>
    {/* Using standard anchor tag with Tailwind classes matching buttonVariants */}
    <a href="/contact" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-8">Get Your Free Quote!</a>
  </section>

</BaseLayout>

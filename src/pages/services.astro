---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ServicesGrid from "@/components/blocks/ServicesGrid.tsx";
import { buttonVariants } from "@/components/ui/button";
// Icons are now handled within the React component

// Pass icon names as strings
const ourServices = [
  {
    iconName: "Building2", // Pass name instead of component
    title: "Showcase Properties from Above",
    description:
      "Help sell or lease faster! Get stunning aerial photos & video tours that show off a property's true scale, location, and key features here in Lethbridge.",
  },
  {
    iconName: "Film",
    title: "Marketing Videos with Altitude",
    description:
      "Make your Lethbridge brand pop! We create eye-catching drone shots for promos, websites, and brand stories that people actually remember.",
  },
  {
    iconName: "CalendarDays",
    title: "Dynamic Event Coverage",
    description:
      "Capture the full atmosphere! Our drones get those epic shots showing the scale and energy of your Lethbridge festival, wedding, or corporate event.",
  },
  {
    iconName: "HardHat",
    title: "Construction Site Fly-Overs",
    description:
      "Keep tabs on your Lethbridge build, safely and easily. Get clear progress shots, site overviews, and useful documentation without anyone climbing scaffolding.",
  },
  {
    iconName: "MapPinned",
    title: "Precise Mapping & Surveys",
    description:
      "Understand your terrain? We create detailed maps, 3D models, and precise measurements for surveys, inspections, farming, and planning around Lethbridge.",
  },
  {
    iconName: "Leaf",
    title: "Ag Insights for Smart Farming",
    description:
      "Farm smarter! Use drone data for checking crop health (NDVI), spotting irrigation issues, and managing resources better on your Southern Alberta fields.",
  },
];
---

<BaseLayout title="Coalbanks Creative | Drone Services in Lethbridge & Southern Alberta" description="Lethbridge Drone offers expert aerial photography, videography, mapping & inspection services in Southern Alberta. Elevate your project today!">

  {/* Introductory Section */}
  <section class="py-16 md:py-24 text-center bg-background">
    <div class="container max-w-3xl mx-auto">
      {/* Apply consistent H1 style (added font-heading) */}
      <h1 class="font-heading text-4xl md:text-5xl font-bold tracking-tight mb-4">
        Our Drone Services for Lethbridge & Southern Alberta
      </h1>
      <p class="text-lg text-muted-foreground leading-relaxed">
        Ready to see things differently? We're Coalbanks Creative, your friendly local drone experts right here in Lethbridge. We're experienced and certified, and we know Southern Alberta. We use advanced drone technology to capture stunning aerial photos, videos, maps, and inspection data that helps solve problems and showcases your work effectively.
      </p>
    </div>
  </section>

  {/* New Services Grid Section - Removed redundant title prop */}
  <section id="services-grid" class="bg-background">
    <div class="container">
       <ServicesGrid services={ourServices} client:load /> {/* Removed title prop as it's now in the intro section */}
    </div>
  </section>

  {/* Existing Why Choose Us Section (potentially restyled) */}
  <section id="why-choose-us" class="relative overflow-hidden py-16 md:py-24 bg-secondary/90 dark:bg-secondary/80 rounded-lg"> {/* Adjusted bg opacity, added rounded-lg */}
    {/* Add topography SVG background */}
    <div class="absolute inset-0 -z-10 size-full bg-[url('/images/assets/topography.svg')] bg-repeat opacity-30 dark:invert" />
    <div class="container relative z-10"> {/* Added relative z-10 */}
       <div class="max-w-3xl mx-auto text-center"> {/* Centered text */}
        {/* Apply consistent heading style */}
        <h2 class="font-heading text-3xl md:text-4xl font-bold mb-6 tracking-tight">Why Partner with Coalbanks Creative?</h2>
        <p class="text-muted-foreground leading-relaxed mb-6">
          It's simple: we deliver exceptional results, even in challenging conditions. Got a tough location near Lethbridge? We love a challenge! Plus, we're fully certified by Transport Canada and insured, so you have peace of mind knowing everything's safe, compliant, and professional.
        </p>
        <p class="text-muted-foreground leading-relaxed">
          We're easy to collaborate with, manage complex logistics (like flying near the airport), and simplify the process of getting high-quality drone content for your project. We turn potential challenges into compelling visuals!
        </p>
       </div>
    </div>
  </section>

  {/* Optional Call to Action */}
  <section class="container py-16 md:py-24 text-center">
    {/* Apply consistent heading style */}
    <h2 class="font-heading text-3xl md:text-4xl font-bold mb-6 tracking-tight">Ready to See Your Project Soar?</h2>
    <p class="text-muted-foreground mb-8 max-w-xl mx-auto">Let's chat about your ideas! Whether it's photos, video, maps, or inspections, we're here to help.</p>
    <a href="/contact" class={buttonVariants({ size: "lg" })}>Get Your Free Quote!</a>
  </section>

</BaseLayout>
